<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="115.0" prefWidth="430.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.fx.ExportWindowController">
   <children>
      <HBox prefHeight="105.0" prefWidth="430.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <RadioButton fx:id="rbtn_json" mnemonicParsing="false" selected="true" text="JSON">
                     <padding>
                        <Insets left="10.0" top="10.0" />
                     </padding>
                     <toggleGroup>
                        <ToggleGroup fx:id="export" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="XML" toggleGroup="$export">
                     <padding>
                        <Insets left="10.0" top="10.0" />
                     </padding>
                  </RadioButton>
               </children>
            </VBox>
            <VBox prefHeight="105.0" prefWidth="320.0">
               <children>
                  <HBox prefHeight="35.0" prefWidth="320.0">
                     <children>
                        <TextField fx:id="text_path" editable="false" prefHeight="25.0" prefWidth="220.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#clickPathSelectBtn" prefHeight="25.0" prefWidth="90.0" text="Выбрать путь" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <ComboBox fx:id="table_chosser" prefHeight="25.0" prefWidth="320.0">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Button mnemonicParsing="false" prefHeight="27.0" prefWidth="144.0" text="Экспортировать" onAction="#clickExportBtn">
                     <VBox.margin>
                        <Insets left="200.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
